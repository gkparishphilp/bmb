- content_for :left_column do
	- if @current_author.present?
		= render 'author_admin/nav'
	- else
		= render 'site_admin/nav'
- content_for :middle_column do
	.form_group
		%h1 
			Edit Blog Article
		= form_for [ @owner, @article ], :html => { :multipart => true } do |f|
			= render 'form', :f => f, :m => 'Update'
		
- content_for :right_column do
	= render 'shared/help'
	%h3 Notice
	By uploading content to BackMyBook, you agree to our 
	= link_to "terms of service", "/terms", :target => "_blank"
	and our 
	= link_to "content publishing agreement", "/content", :target => "_blank"
	&#46;