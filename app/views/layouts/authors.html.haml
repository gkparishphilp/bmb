!!!strict
%html
	%head
		= render :partial => 'layouts/meta'
		- if @theme
			= render :partial => 'shared/custom_style'
	%body
		I'm an Author site!
		#container
			= render :partial => 'shared/header'
			#bd
				= render :partial => 'shared/flash', :locals => { :flash => flash }
				.column1
					.author_hd
						%h1
							= @author.pen_name
						.author_corner
							= render :partial => 'authors/menu'
					.author_bd
						#inner-content-wrapper
							= yield :left_column
				.column2
					.author_photo
						= image_tag @author.avatar.location( :profile ) unless @author.avatar.nil?
					= yield :right_column
			= render :partial => 'shared/footer'
		= render :partial => 'shared/analytics'
		= render :partial => 'shared/scripts'