- content_for :left_column do
	%h1 Let's Get Started!
	.form_group
		%h3 First, Please Create an Account:
		= form_tag author_signup_path do
			= label_tag 'Email Address:'
			= text_field_tag :email, "", :class => 'register_field'
			= label_tag 'Password:'
			= password_field_tag :password, "", :class => 'register_field'
			= label_tag 'Confirm Password:'
			= password_field_tag :password_confirmation, "", :class => 'register_field'
			
			= label_tag 'Pen Name:'
			= text_field_tag :pen_name, "", :class => 'register_field'
			%br
			= check_box_tag :agreement
			I agree to the
			= link_to Contract.first.name, Contract.first, :target => '_new'
			.tiny
				( You must agree to the 
				= Contract.first.name
				to use the BackMyBook store
				)
			.clear
			= submit_tag 'Register', :class => 'buttons'
		
