-#
	.follow-me.ui-helper-clearfix
		%h3 Follow Me
		%div
			=image_tag('twitter.jpg')
			=image_tag('facebook.jpg')
			=image_tag('rss.jpg',:alt=>'rss feed')
			=image_tag('mail.jpg', :alt=>'contact author', :class => :toggle_contact_form )
		#contact_form
			= text_field_tag :email
			= submit_tag 'Submit'
#accordion
	- if @theme.nil? || !@theme.book_site
		%div
			%h3 
				=link_to 'Featured books','#'
			%div 
				- if @author.books.published.empty?
					No Books
				- else
					= render @author.books
	- unless @author.links.empty?
		%div
			%h3 
				=link_to 'Links','#'
			%div 
				- if @author.links.empty?
					No Links
				- else
					- for link in @author.links
						= link_to link.title, link.url
						.small= link.description
						%br
	- unless @author.events.upcomming.empty?
		%div
			%h3 
				=link_to 'Events','#'
			%div 
				- if @author.events.upcomming.empty?
					No Upcomming Events
				- else
					- for event in @author.events.upcomming
						= link_to event.title, author_event_url( @author, event )
						.small
							%br
							On:
							= format_date event.starts_at
							%br
							At: 
							= event.location
	- unless current_page?( new_author_order_path( @author ) )
		%div
			%h3 
				=link_to 'Recent Activity','#'
			%div 
				- if Activity.feed( @author, @author.books, @author.merches ).empty?
					No Activity
				- else
					- for activity in Activity.feed( @author, @author.books, @author.merches )[0..19]
						= render activity
				