	.sidebar_sections
		%h3 Follow Me
		.pad
			= image_tag('twitter.jpg')
			= image_tag('facebook.jpg')
			= image_tag('rss.jpg',:alt=>'rss feed')

- if true # todo if @author.has_subscription?( email )
	.sidebar_sections
		%h3 
			=link_to 'Newsletter Signup','#'
		.pad
			Sign up for 
			= possessize @author.pen_name
			free newsletter to keep in touch.
			
			
			= form_tag newsletter_signup_author_path( @author ), :style => 'margin-top:10px;' do #todo author_newsletter_signup_path
				%b Name:
				= text_field_tag :name
				%br
				%b Email:
				= text_field_tag :email
				= submit_tag "Join", :class => 'button'
			.tiny
				BackMyBook and 
				= @author.pen_name
				respect your privacy.  You will be able to cancel your newsletter at any time, and your information will not be shared with any 3rd parties.

- if @theme.nil? || !@theme.book_site
	.sidebar_sections
		%h3 
			=link_to 'Featured books','#'
		.pad
			- if @author.books.published.empty?
				No Books
			- else
				= render @author.books.published.reverse

- unless @author.links.empty?
	.sidebar_sections
		%h3 
			=link_to 'Links','#'
		.pad
			- if @author.links.empty?
				No Links
			- else
				- for link in @author.links
					= link_to link.title, link.url
					.small= link.description
					%br
- unless @author.events.upcoming.empty?
	.sidebar_sections
		%h3 
			=link_to 'Events', author_events_path( @author )
		.pad
			- if @author.events.upcoming.empty?
				No Upcomming Events
			- else
				- for event in @author.events.upcoming
					= link_to event.title, author_event_url( @author, event )
					.small
						%br
						On:
						= format_date event.starts_at
						%br
						At: 
						= event.location
