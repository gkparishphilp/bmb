.column1
	.pad_content
		.form_group
			%h1 Blog

			= form_for [@article || Article.new], :html => { :multipart => true } do |f|
				-# TODO - fix these hacks!
				= f.hidden_field :owner_id, :value => @author.id
				= f.hidden_field :owner_type, :value => 'Author'
				= f.label "Title:"
				= f.text_field :title, :class => 'title'
				%br
				= f.text_area :content, :class => 'long_desc_area'
				%br

				= f.label "Publish On:"
				= f.text_field :publish_on
				%br
				= f.label 'Topics:'
				= f.text_field :topic_list
				%br
				= f.label 'Keywords:'
				= f.text_field :keyword_list

				= f.label "Snip Preview at Character:"
				= f.text_field :snip_at, :style => 'width:50px;'

				%br
				= f.check_box :comments_allowed, {}, 'true', 'false'
				Allow Comments
				= f.label "Status:"
				= f.select :status, [ ['Publish',  'publish'], ['Draft', 'draft'] ]

				%br
				= submit_tag
.column2
	.pad_content
		%h2 Help