- content_for :left_column do
	.author_bd
		#inner-content-wrapper
			#article_list
				.article_header
					%h2
						=@article.title
		
					%span.article_meta
						- if @article.comments_allowed?
							= link_to pluralize( @article.comments.count, "Comment" ), blog_link( @article ) + "#comments"
						%br
						- unless @article.topics.empty?
							#article_topics
								Filed under:
								- for topic in @article.topics
									= link_to separated_list( @article.topics, topic.name, "," ), blog_index_path( :topic => topic.name )

				.article_content
					= @article.content
				
				- unless @article.related_articles.empty?
					#related
						%h3 Related Posts
						- for article in @article.related_articles
							= link_to article.title, blog_path( article )

				- if @article.comments_allowed?
					- unless @article.comments.empty?
						#comments
							%h3 Comments
							= render :partial => 'comments/comment', :collection => @article.comments
					#new_comment
						= render :partial=>'comments/new'
	
- content_for :right_column do
	= render :partial => 'sidebar'
	= render :partial => 'authors/right_column'