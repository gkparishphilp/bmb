- content_for :left_column do
	.books
		.left_col
			.book_thumb
				= avatar_tag( @book, :profile, :width => 150 )
			
			- unless @book.preview.nil?
				%li
					.button
						= link_to "Free Sample", preview_author_book_url( @author, @book )
			
			- unless @book.ebook_sku.nil?
				%li
					.button
						=link_to "Buy E-book #{format_price( @book.ebook_sku.price )}", new_author_order_url( @author, :sku => @book.ebook_sku, :protocol => SSL_PROTOCOL )
			
			- unless @book.audio_book_sku.nil?
				%li
					.button
						=link_to "Buy Audio Book #{format_price( @book.audio_book_sku.price )}", new_author_order_url( @author, :sku => @book.audio_book_sku, :protocol => SSL_PROTOCOL )
			
			- unless @book.custom_skus.empty? && @book.merch_skus.empty?
				.also-available
					%h3 Also Available
					%ul
						- for sku in @book.merch_skus.published
							- unless sku.sold_out?
								%li
									= link_to sku.title, author_store_url( @author, sku ), :class => 'main' 
									%em= link_to "#{format_price( sku.price )} buy", new_author_order_url( @author, :sku => sku, :protocol => SSL_PROTOCOL )
						- for sku in @book.custom_skus.published
							- unless sku.sold_out?
								%li
									= link_to sku.title, author_store_url( @author, sku ), :class => 'main' 
									%em= link_to "#{format_price( sku.price )} buy", new_author_order_url( @author, :sku => sku, :protocol => SSL_PROTOCOL )
						
		.right_col.text
			- cache( :controller => 'books', :action => 'show', :action_suffix => 'book_description') do 
				%h1= @book.title
				.book-meta.clearfix
					-#
						.ratings
							%ul.star-rating
								%li.current-rating{ :style => "width:#{ ( @book.review_average * 125 ) / 5 }px;" }
							%em= link_to "Rate It", "#reviews"
				.book_content	
					= @book.description.html_safe
			
			%hr.divider
			#reviews
			- if @current_user.anonymous?
				%b
					Please
					= link_to "Login", login_url
					or
					= link_to "Register", register_url
					to review this book.
			- else
				= render :partial => 'reviews/new'
			
			- unless @book.reviews.empty?
				%hr.divider
				%h3
					Reviews
				= render @book.reviews.order(' created_at desc')
			
			.clear
	
- content_for :right_column do
	&nbsp;
