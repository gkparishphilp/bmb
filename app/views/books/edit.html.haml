- content_for :left_column do
	= render :partial => 'admin/nav'
- content_for :middle_column do
	.form_group
		%h1
			Edit
			= @book.title

		= image_tag @book.avatar.location('thumb'), :width => @book.avatar.thumb_width if @book.has_attached_avatar?
		
		
		= form_for [ @author, @book ], :html => { :multipart => true } do |f|
			= file_field_tag :attached_avatar_file
			= f.label 'Subtitle:'
			= f.text_field :subtitle
			= f.label 'Genre:'
			= f.collection_select :genre_id, @genres, :id, :name
			= f.label "Description:"
			= f.text_area :description
			= f.label 'Keywords:'
			= f.text_field :tag_list
			= f.submit
			
	.form_group
		.new_button
			= link_to image_tag( 'add.png', :width => 16 ), new_author_book_asset_path( @author, @book, :type => 'ebook' )
			= link_to "Upload E-Text", new_author_book_asset_path( @author, @book, :type => 'ebook' )
		.new_button
			= link_to image_tag( 'add.png', :width => 16 ), new_author_book_asset_path( @author, @book, :type => 'pdf' )
			= link_to "Upload PDF", new_author_book_asset_path( @author, @book, :type => 'pdf' )
		.new_button
			= link_to image_tag( 'add.png', :width => 16 ), new_author_book_asset_path( @author, @book, :type => 'audio_book' )
			= link_to "Upload Audio", new_author_book_asset_path( @author, @book, :type => 'audio_book' )
		.clear
		- unless @book.assets.empty?
			%h2
				= @book.title
				Assets
			%table.admin_table
				- for asset in @book.assets
					%tr
						%td
							= asset.title
						%td
							= asset.class.name
						%td
							= asset.asset_type
						%td
							= link_to 'edit', edit_author_book_asset_path( @author, @book, asset )
						%td
							= link_to 'delete', author_book_asset_path( @author, @book, asset ), :method => :delete 
		
- content_for :right_column do
	%h2 Help
	
	%h3 Links
	- for link in @book.links
		= link_to link.title, link.url
		edit | delete
		

