#ft
	%ul.footer_menu
		%li= link_to "FAQ", "/faq"
		%li= link_to "Features", "/features"
		%li= link_to "Blog", blog_index_url
		%li= link_to "Terms", "/terms"
		%li= link_to "Privacy", "/privacy"
		%li= link_to "Contact Us", new_contact_url
		%li &nbsp;
		%li &nbsp;
		- if @current_user.anonymous?
			%li= link_to "Login", login_url
			%li= link_to "Register", register_url
		- else
			%li
				- if @current_user.admin?( @current_site )
					%li.admin
						= image_tag( 'admin.png', :width => 20 )
				%li.user
					= link_to avatar_tag( @current_user, :tiny, :width => 20 ), user_url( @current_user ), :class=>'avatar'
					= link_to @current_user.name, user_url( @current_user ), :class=>'username'
				%li= link_to "Logout", logout_url + '?dest=' + request.fullpath
		
		- if @current_author
			%li= link_to "Admin", admin_index_url
	%ul.author_copy
		%li= link_to "&copy; #{Time.now.year} BackMyBook".html_safe, root_url( :host => @current_site.domain )