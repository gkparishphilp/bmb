#hd
	.wrapper
		= link_to image_tag( 'logo_sml.png', :class => :logo ), root_path
		%ul.top_main_menu
			%li= link_to "Menu", "#"
			%li= link_to "Upload a Book", "#"
		%ul.top_user_menu
			- if @current_user.anonymous?
				%li= link_to "Login", login_path
				%li= link_to "Register", register_path
			- else
				%li
					= link_to image_tag( @current_user.avatar, :width => 20 ), user_path( @current_user )
					= link_to @current_user.name, user_path( @current_user )
				%li= link_to "Logout", logout_path + '?dest=' + request.fullpath
