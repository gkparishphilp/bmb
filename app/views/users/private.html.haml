- content_for :left_column do
	%h1
		= @user.name
		Home
	%br
	%p 
		Hi, Welcome to BackMyBook!  This is your personal user dashboard.  You would do things like manage your user profile settings here, but since some people can't seem to figure out those kind of advanced internetty concepts, for now the only thing you can do here is download stuff if you are kind enough to buy it.
	- unless @user.skus.empty?
		%br
			%h3 
				Thank You for Purchasing:
			- for sku in @user.skus
				.listing( style = 'margin-left:30px;' )
					.listing_avatar
						- if sku.avatar.present?
							= avatar_tag( sku, :thumb, :width => 64 )
						- else
							= avatar_tag( sku.book, :thumb, :width => 64 )
					.listing_data
						.listing_title
							= sku.title
						%b
							Files in this order:
						.listing_buy
							- for item in sku.items
								%div[item]
									= link_to "Download  #{item.document.format} File (#{number_to_human_size( item.document.filesize )})", download_author_book_asset_url( sku.owner, sku.book, item ) if item.respond_to? 'document'
					.clear
			
			
			
				
				
	.form_group
		%h2 Settings
		%br
		#user_avatar
			= avatar_tag( @user, :thumb, :width => 64 )
		#user_panel
			%b
				Change your avatar at 
				= link_to "gravatar.com", 'http://gravatar.com'
			%br
			We're using:
			= @user.email
			%br
			%br
			%h4 Change Your Email Address
			= form_for @current_user do |f|
				= f.label "Email"
				= f.text_field :email
				= f.submit "Enter", :class=>'buttons'
			%br
			%br
			%h4 Change Your Password:
			= form_tag :controller=>'users', :action => :reset_password do
				%label New Password:
				= password_field_tag :password, params[:password], :size=>30, :class=>"password"
				%label Confirm Password:
				= password_field_tag :password_confirmation, params[:password_confirmation], :size=>30, :class=>"password"
				= hidden_field_tag :token, @user.remember_token
				%br
				= submit_tag "Change Password", :class => 'buttons'
			%br
			%br
			%h4 Misc Settings:
			= form_for @user do |f|
				= f.label 'Website Name:'
				= f.text_field :website_name
				= f.label 'Website URL:'
				= f.text_field :website_url
				.actions
					= f.submit "Enter", :class => :buttons
		.clear


- content_for :right_column do
	%br
	-#
		%h3
			Add a Twitter Accoount:
		#twitter
			= form_tag go_twitter_sessions_url do
				= image_submit_tag 'twitter_button.png'
		%h3
			Add a Facebook Account:
		#facebook
			= form_tag go_facebook_sessions_url do
				= image_submit_tag 'facebook_connect.png'
	%h3 Need Help?
	%p
		For assistance please 
		%b= link_to "contact us", new_contact_url
		
	%h3
		Recent Activity
	= render @activities
	
	