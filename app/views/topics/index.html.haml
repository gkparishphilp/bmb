.forum_nav
	.breadcrumb
		= link_to APP_NAME, root_path
		>
		= link_to "Forums", forums_path
		>
		%b= @forum.name
	.reply_link
		-if @current_user.anonymous?
			%b= link_to "Login", new_session_path + "?dest=" + new_forum_topic_path( @forum )
			or
			%b= link_to "Register", new_user_path + "?dest=" + new_forum_topic_path( @forum )
			to post a topic
		-else
			.new_button
				= link_to image_tag( 'add.png', :width => 16 ), new_forum_topic_path( @forum )
				%b= link_to "Post a Topic", new_forum_topic_path( @forum )
%br.clear

- if @topics.total_pages > 1
	.pagination
		.page_info
			= page_entries_info @topics
		= will_paginate @topics
	
%table
	%thead
		%tr
			%th
			
			%th
				Views
			%th
				Posts
			%th
				Last Post
	%tbody
		- @topics.each do |topic|
			%tr
				%td
					.topic_title
						%b= link_to topic.title,forum_topic_path( @forum, topic )
					by
					= link_to topic.user.user_name, topic.user
				%td
					= topic.view_count
				%td
					= topic.posts.count
				%td
					- if topic.posts.last
						= link_to format_date(topic.posts.last.created_at), custom_post_path( @forum, topic, topic.posts.last )
						%br
						by
						= link_to topic.posts.last.user.user_name, topic.posts.last.user
					- else
						&#45;&#45;&#45;


- if @topics.total_pages > 1
	.pagination
		.page_info
			= page_entries_info @topics
		= will_paginate @topics


