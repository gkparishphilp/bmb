- content_for :left_column do
	= render :partial => 'admin/nav'
- content_for :middle_column do
	%h1 
		Editing Confirmation Email 
	= form_for EmailMessage.new do |f|
		%br
		Subject:
		%br
		=f.text_field :subject, :value => @subject
		%br

		%br
		= f.text_area :content, :class => 'mceEditor', :value => @content

		%br
		= f.hidden_field :email_type, :value => 'shipping'
		= f.hidden_field :user_id, :value => @order.user.id
		
		= f.submit 'Save' 
		|
		= link_to 'Cancel', :back