- content_for :left_column do
	= render :partial => 'admin/nav'

- content_for :middle_column do
	.admin_header
		.admin_title
			%h3
				Admin Digital Assets for:
				= @book.title
		.new_button
			= link_to image_tag( 'add.png', :width => 16 ), new_author_book_asset_url( @current_author, @book )#, :type => 'etext' )
			= link_to "Add Asset", new_author_book_asset_url( @current_author, @book )#, :type => 'etext' )
		.clear
	
	= form_tag admin_author_book_assets_path( @current_author, @book ), :method => :get, :id => 'search_form' do

		= text_field_tag :q, params[:q]
		= submit_tag 'Search', :class => 'buttons'
		|
		= link_to 'Clear', :sort => params[:sort], :dir => params[:dir], :q => nil
		#admin_table= render 'admin_table'
		