.reviews
	%h3
		Review this 
		= @reviewable.class.to_s
	- form_for [ @author, @reviewable, Review.new ] do |f| 

		%fieldset.radios
			%em rate it
			.star_input
				= f.radio_button :score, 1, :class => :star, :title => 'Poor', :id=>'radio-01'
				= f.radio_button :score, 2, :class => :star, :title => 'Meh...', :id=>'radio-02'
				= f.radio_button :score, 3, :class => :star, :title => 'Good', :id=>'radio-03'
				= f.radio_button :score, 4, :class => :star, :title => 'Great!', :id=>'radio-04'
				= f.radio_button :score, 5, :class => :star, :title => 'Excellent!', :id=>'radio-05'
			%br

		= f.text_area :content
		= f.submit 'Post Review', :class=>'button'