- content_for :left_column do
	-# cache( :controller => 'site', :action => 'index', :action_suffix => 'left') do
	.pad_content
	
		#hp_promo
			.top_promo
				%h1
					%span.author Authors:
					%span Sell your books &amp; merch directly to your readers
			
			.text
				We make it easy and economical to create lasting relationships with your customers through your own online bookstore.
				
			.get_started
				= link_to image_tag( "get_started_button.png" ), author_signup_path
			-#= link_to image_tag( "get_started_banner.jpg" ), 'get-started'

			%h2
				= image_tag( "logo_icon.png" )
				BackMyBook gives you
			%ul
				%li <span class="green">Free</span> online store - sell e-books in ANY format, audio-books, even hardcovers and merchandise
				%li Industry-leading 85/15 royalties
				%li Email marketing -- sign-up your readers and send newsletters
			%h2
				= image_tag( "trial_icon.png" )
				Try us <span class="green">Risk Free</span>

			%ul
				%li Free branded store setup and customization
				%li Free consultation to get you started
				%li Personalized service and support
				%li Cancel at any time in the first 3 months with no obligation
				
			%h2
				= image_tag( "cost_icon.png" )
				How much does it cost?
			%ul
				%li When you sell a book, you keep 85% of the revenue, we keep 15%
				%li No upfront fees or charges (min $150/quarter rev share applies)
			
			.get_started
				= link_to image_tag( "get_started_button.png" ), author_signup_path
			
			%br
			%br.clear

		
			
	
- content_for :right_column do

	.hp_promo
		= link_to image_tag( "bmb_sigler_hp_promo.jpg" ), 'authors/scott-sigler'

	.follow-me.ui-helper-clearfix
		%h3 Follow Us
		%div
			= link_to image_tag( 'twitter.jpg' ), "http://twitter.com/backmybook"
			= link_to image_tag( 'facebook.jpg' ), "http://www.facebook.com/pages/BackMyBook/129259667097024"
			= link_to image_tag( 'rss.jpg',:alt=>'rss feed' ), "http://feeds.feedburner.com/TheBackmybookBlog"
	.follow-me.ui-helper-clearfix
		%h3 Join our newsletter
		= image_tag( 'mail.jpg' )
		#newsletter_form
			%br.clear
			= form_tag root_path, :style => 'margin:10px 0px 5px 5px;' do
				Email:
				= text_field_tag :email
				%br
				Name:
				= text_field_tag :name
				= submit_tag 'Submit', :class => 'buttons'
			.tiny{ :style => 'padding:5px;' }
				BackMyBook respects your privacy.  You will be able to cancel your newsletter at any time, and your information will not be shared with any 3rd parties.
	
	%div
		- unless @current_site.podcasts.empty?
			%h3 
				=link_to 'Podcast', podcasts_url
			%div.text 
				- for episode in @current_site.podcasts.first.episodes
					.episode
						= image_tag "podcast_icon.png", :width => 20
						= link_to episode.title, podcast_episode_url( episode.podcast, episode )
			
	.follow-me.ui-helper-clearfix
		%h3 
			Recent Blog Articles
		= image_tag 'blog_title_icon.png'
		.recent_posts
			- for article in @recent_blog_posts
				.text
					.recent_preview
						.recent_title
							= link_to article.title, blog_link( article )
						= snip article.content.html_safe, 140


		